#!/usr/bin/env ruby
require "pry"

class Questions

	def set_inital_values
		@questionList = []
		@questionFile = "/Users/bnourse/questions.txt"
	end

	def read_into_array
		@questionList = File.readlines(@questionFile)
	end

	def disp
		for i in 0..@questionList.length-1
			questionNumber = i + 1
			puts "#{questionNumber}. #{@questionList[i]}"
		end
	end

	def add(newQuestion)
		@questionList.push(newQuestion)
		write_to_file
	end

	def remove(questionNumber)
		questionIndex = questionNumber - 1
		@questionList.delete_at(questionIndex)
	end

	def write_to_file
		open(@questionFile, 'w') do |f|
	      for question in @questionList
	      	question = question.chomp
	      	f.puts question
	      end
	    end
	end

end

q = Questions.new
q.set_inital_values
q.read_into_array
q.disp
q.remove(2)
q.write_to_file
q.disp